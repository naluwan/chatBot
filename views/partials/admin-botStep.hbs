<div class='card col-6 m-3'>
  <h4 class='card-header'>
    機器人回覆
  </h4>
  <div class='card-body'>
    <h5 class='card-title'>{{this.response}}</h5>
    <button
      type='button'
      class='btn btn-primary mt-5'
      data-bs-toggle='modal'
      data-bs-target='#editBotResModal'
    >編輯</button>
  </div>
</div>

<div
  class='modal fade'
  id='editBotResModal'
  tabindex='-1'
  aria-labelledby='editBotResModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog modal-dialog-centered'>
    <div class='modal-content'>
      <form
        action='/admin/stories/response/{{userId}}/{{storyName}}/{{this.action}}?_method=PUT'
        method='post'
      >
        <div class='modal-header'>
          <h5 class='modal-title' id='exampleModalLabel'>編輯機器人回覆</h5>
          <button
            type='button'
            class='btn-close'
            data-bs-dismiss='modal'
            aria-label='Close'
          ></button>
        </div>
        <div class='modal-body'>
          <label for='botRes' class='col-form-label'>回覆內容:</label>
          <textarea class='form-control' id='botRes' name='botRes'>{{this.response}}</textarea>
        </div>
        <div class='modal-footer'>
          <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>取消</button>
          <button type='submit' class='btn btn-primary'>確認</button>
        </div>
      </form>
    </div>
  </div>
</div>