<div class='d-flex justify-content-center'>
  <div class='rounded border border-dark col-6'>
    <div class='m-4 text-center'>
      <h1 class='h3 font-weight-normal mb-3'>登入</h1>
    </div>
    <form class='form-signin d-flex flex-column align-items-center' action='/signin' method='POST'>
      <div class='form-row mb-3 col-10'>
        <label class='form-label' for='email'>Email</label>
        <input
          class='form-control'
          id='email'
          type='text'
          name='email'
          class='form-control'
          placeholder='Email'
          required
          autofocus
        />
      </div>
      <div class='form-row mb-3 col-10'>
        <label class='form-label' for='password'>Password</label>
        <input
          class='form-control'
          id='password'
          type='password'
          name='password'
          class='form-control'
          placeholder='Password'
          required
        />
      </div>
      <button class='btn btn-primary btn-block col-10' type='submit'>登入</button>
    </form>

    <div class='mb-4 text-center'>
      <p><a href='/signup' class='btn btn-info btn-block col-10'>註冊帳號</a></p>
    </div>
  </div>
</div>